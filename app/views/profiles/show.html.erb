<div class="page-header">
	<h1><%= @user.full_name %></h1>
</div>

<h2>Welcome <%= @user.full_name %>, you have <%= @status_count %> statuses.</h2>

<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="well">
			<%= status.content %>
			<hr />
			<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
		</div>	
	<% end %>
<% end %>